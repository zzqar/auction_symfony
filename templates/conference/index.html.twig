{% extends 'base.html.twig' %}

{% block title %}Аукцион{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/tabel.css">
    <link rel="stylesheet" href="/css/auction.css">
{% endblock %}
{% block main %}

        <div class="intro"></div>
        <div class="main">
            <div class="contant">
                <div class="contant_name">АУКЦИОН</div>
                <hr>
                <div class="btw_con">
                    {% if is_granted('ROLE_ADMIN') %}
                    <form action="/addGood" target="_blank">
                        <button class="btw_use"  >Добавить лот</button>
                    </form>
                    {% endif %}
                </div>

            <div class="goods">
                <ul class="products clearfix">
                    {% for good in goods %}
                        {% if good.status == 0 or is_granted('ROLE_ADMIN') %}
                        <li class="product-wrapper">
                            <a href="/good/view/{{good.id}}" class="product">
                                <div class="product-photo">
                                    <img src="{{ good.images }}" alt="">
                                </div>
                                <div class="soder">
                                    <p class="name_goods">{{ good.name }}</p>
                                    <p>{{ good.cost }} руб</p>
                                </div>
                                <div class="soder">
                                    <p class=" ">Быстрый выкуп: </p>
                                    <p>{{ good.costmax }}  руб </p>
                                </div>
                                <div class="soder">
                                    <p class=" ">Окончание:</p>
                                    <p>{{ good.lastdate|date('d-m-Y') }}</p>
                                </div>

                                <div class="soder">
                                    {% if good.status != 0 %}
                                        <p class=" ">Статус:</p>
                                        <p class=" ">Завершен</p>
                                    {% endif %}
                                </div>


                            </a>
                        </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            </div>
        </div>







{% endblock %}
